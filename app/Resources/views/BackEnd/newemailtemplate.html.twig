{% extends "base.html.twig" %}

{% block custcss %}
    <!-- page specific date picker -->
    <link href="{{ asset('resources/vendors_new/dropzone-4.3.0/dist/min/dropzone.min.css') }}" rel="stylesheet">
    <!--page specific css -->
    <link href="{{ asset('resources/build/css/emailcampcustome.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="">
        <div class="row">
            <!-- form input mask -->
            <div class="col-md-6 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>New Template Details</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br/>
                            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                            <div class="form-horizontal form-label-left">
                                <div class="form-group">
                                    <div class="col-md-9 col-sm-9 col-xs-9 col-xs-9-ex">
                                        <div class='input-group fieldsep'>
                                             <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-thumbs-up"></span>
                                             </span>
                                            {{ form_label(form.app) }}
                                            {{ form_widget(form.app) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-9 col-sm-9 col-xs-9 col-xs-9-ex">
                                        <div class='input-group fieldsep'>
                                             <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-thumbs-up"></span>
                                             </span>
                                            {{ form_label(form.template_name) }}
                                            {{ form_widget(form.template_name) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-9 col-sm-9 col-xs-9 col-xs-9-ex">
                                            {{ form_label(form.htmltext) }}
                                            {{ form_widget(form.htmltext) }}
                                    </div>
                                </div>
                                <div class="col-md-9 col-sm-9 col-xs-9 col-xs-9-ex">
                                    {{ form_label(form.submit) }}
                                    {{ form_widget(form.submit) }}
                                </div>
                            </div>
                            {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% block custjs %}
    <!-- Dropzone.js -->
    <script src="{{ asset('resources/vendors_new/dropzone-4.3.0/dist/min/dropzone.min.js')}}"></script>   
    {% endblock %}
    
{% endblock %}
    
